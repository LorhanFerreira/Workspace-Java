package controller;

import util.Teclado;

public class L53_Questao06 {

	public static void main(String[] args) {
		/*
		 * Desenvolver um programa que apresente o valor de uma potência de uma base
		 * qualquer elevada a um expoente qualquer, ou seja, de be , onde os valores de
		 * b e e são fornecidos pelo usuário, sem utilizar Math.pow()
		 */
		int b, e, potencia = 1; // potencia é acumuladora
		b = Teclado.lerInt("Informe a base: ");
		e = Teclado.lerInt("Informe o expoente: ");
		for (int cont = 1 ; cont <= e ;cont++ ) {
			potencia = potencia * b;
			
		}System.out.println(b + " Elevado ao " + e + " = " + potencia);

	}

}
